class baseMan {// Weaponless baseclass
	displayName = "Unarmed";
	// All randomized.
	uniform[] = {
		"MNP_CombatUniform_NOR_B",
		"MNP_CombatUniform_NOR_A"
	};
	vest[] = {"MNP_Vest_NOR_1","MNP_Vest_NOR_2"};
