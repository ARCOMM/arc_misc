	headgear[] = {"CUP_H_OpsCore_Spray"};
	goggles[] = {"CUP_FR_Neckscarf5","CFP_Neck_Plain4","CUP_B_ACRPara_dpm","CUP_FR_NeckScarf"},"CFP_Shemagh_Neck_M81","CFP_Neck_Plain2"};
	hmd[] = {""};
	// Leave empty to remove all. "Default" > leave original item.
	faces[] = {"Default"};
	// Leave empty to not change faces.
	insignias[] = {};
	// Leave empty to not change insignias

	// All randomized
	primaryWeapon[] = {"hlc_rifle_416D10"};
	scope[] = {"CUP_optic_CompM2_low"};
	bipod[] = {"CUP_bipod_Harris_1A2_L_BLK"};
	attachment[] = {"CUP_acc_ANPEQ_15_Top_Flashlight_Black_L"};
	silencer[] = {};
	// Leave empty to remove all. "Default" for primaryWeapon > leave original weapon.

	// Only *Weapons[] arrays are randomized
	secondaryWeapon[] = {};
	secondaryAttachments[] = {};
	sidearmWeapon[] = {"CUP_hgun_Glock17_blk"};
	sidearmAttachments[] = {"hlc_acc_DBALPL_FL"};
	// Leave empty to remove all. "Default" for secondaryWeapon or sidearmWeapon > leave original weapon.

	// These are added to the uniform or vest
	magazines[] = {};
	items[] = { MEDICAL_R ,"ACE_Flashlight_XL50",LIST_2("Chemlight_green")};
	// These are added directly into their respective slots
	linkedItems[] = {
		"ItemMap",
		"ItemCompass",
		"ItemRadio",
		"ItemWatch"
	};

	// These are put into the backpack
	backpackItems[] = {};

	// Unit traits, see https://community.bistudio.com/wiki/setUnitTrait
	traits[] = {};

	// This is executed after unit init is complete. argument: _this = _unit.
	code = "";

